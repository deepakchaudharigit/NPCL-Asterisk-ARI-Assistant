# Voice Assistant with Gemini 2.5 Flash and Real-time Live API - Environment Configuration
# Copy this file to .env and fill in your API keys

# Google AI Configuration (REQUIRED)
# Get your API key from: https://aistudio.google.com/
GOOGLE_API_KEY=your-google-api-key-here

# AI Model Settings
GEMINI_MODEL=gemini-2.5-flash
GEMINI_LIVE_MODEL=gemini-2.0-flash-exp
GEMINI_VOICE=Puck
MAX_TOKENS=150
TEMPERATURE=0.7

# Voice Assistant Configuration
ASSISTANT_NAME=ARI
COMPANY_NAME=Voice Assistant Corp
VOICE_LANGUAGE=en
SPEECH_RATE=150
VOICE_VOLUME=0.9

# Real-time Audio Settings (slin16 format for Asterisk)
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=320
AUDIO_BUFFER_SIZE=1600
AUDIO_FORMAT=slin16
AUDIO_CHANNELS=1
AUDIO_SAMPLE_WIDTH=2

# Voice Activity Detection
VAD_ENERGY_THRESHOLD=300
VAD_SILENCE_THRESHOLD=0.5
VAD_SPEECH_THRESHOLD=0.1

# Timeout Settings
LISTEN_TIMEOUT=20.0
PHRASE_TIME_LIMIT=15.0
MAX_RETRIES=3

# Directories
SOUNDS_DIR=sounds
TEMP_AUDIO_DIR=sounds/temp
RECORDINGS_DIR=recordings

# Asterisk ARI Configuration (for telephony integration)
ARI_BASE_URL=http://localhost:8088/ari
ARI_USERNAME=asterisk
ARI_PASSWORD=1234
STASIS_APP=gemini-voice-assistant

# External Media Configuration
EXTERNAL_MEDIA_HOST=localhost
EXTERNAL_MEDIA_PORT=8090

# Real-time Processing Settings
ENABLE_INTERRUPTION_HANDLING=true
MAX_CALL_DURATION=3600
AUTO_ANSWER_CALLS=true
ENABLE_CALL_RECORDING=false

# Performance Settings
ENABLE_PERFORMANCE_LOGGING=false
SESSION_CLEANUP_INTERVAL=300

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
# LOG_FILE=logs/voice_assistant.log  # Uncomment to enable file logging